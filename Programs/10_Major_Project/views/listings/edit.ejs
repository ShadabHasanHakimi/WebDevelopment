<% layout("/layouts/boilerplate") %>
<form action="/listings/<%=listing.id%>?_methode=PUT" method="post">
  <h3>Edit your listing:</h3>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <textarea name="title" id="" class="form-control">
<%=listing.title%></textarea
        >
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="description" id="" class="form-control">
<%=listing.description%></textarea
        >
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Image Link</label>
        <textarea name="image" id="" class="form-control">
<%=listing.image%></textarea
        >
      </div>
      <div class="row">
        <div class="col-md-4">
            <div class="mb-3">
              <label for="price" class="form-label">Price</label>
              <textarea name="price" id="" class="form-control">
      <%=listing.price%></textarea
              >
            </div>
        </div>
        <div class="col-md-8">
            <div class="mb-3">
              <label for="country" class="form-label">Country</label>
              <textarea name="country" id="" class="form-control">
      <%=listing.country%></textarea
              >
            </div>
        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <textarea name="location" id="" class="form-control">
<%=listing.location%></textarea
        >
      </div>
      <button class="btn btn-dark edit-btn mt-3">Edit</button>
    </div>
  </div>
</form>
