<% layout("/layouts/boilerplate") %>
<form
  action="/listings/<%=listing.id%>?_method=PUT"
  method="post"
  class="needs-validation"
  novalidate
  enctype="multipart/form-data"
>
<div class="row mt-3">
  <div class="col-8 offset-2">
      <h3>Edit your listing:</h3>
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <textarea name="listing[title]" id="" class="form-control" required>
<%=listing.title%></textarea
        >
        <div class="valid-feedback">Title looks good!</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" id="" class="form-control" required>
<%=listing.description%></textarea
        >
        <div class="invalid-feedback">Please enter a short description!</div>
      </div>
      <div class="mb-3">
        Original Listing Image
        <br>
        <img src="<%= originalImageUrl %>" alt="" class="src">
      </div>
      <div class="mb-3">
        <div class="mb-3">
          <label for="image" class="form-label">Upload Image</label>
          <input
            type="file"
            name="Listing[image]"
            class="form-control"
          />
        </div>
        <div class="invalid-feedback">Please enter a valid link!</div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <textarea name="listing[price]" id="" class="form-control" required>
      <%=listing.price%></textarea
            >
            <div class="invalid-feedback">Price should be valid!</div>
          </div>
        </div>
        <div class="col-md-8">
          <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <textarea name="listing[country]" id="" class="form-control" required>
      <%=listing.country%></textarea
            >
            <div class="invalid-feedback">Country should be valid!</div>
          </div>
        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <textarea name="listing[location]" id="" class="form-control" required>
<%=listing.location%></textarea
        >
        <div class="invalid-feedback">Location should be valid!</div>
      </div>
      <button class="btn btn-dark edit-btn mt-3">Save</button>
    </div>
  </div>
</form>
